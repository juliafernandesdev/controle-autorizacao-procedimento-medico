<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>controle-autorizacao-procedimento-medico</display-name>

  <!-- PÃ¡gina inicial -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Servlet: SolicitarAutorizacaoController -->
  <servlet>
    <servlet-name>SolicitarAutorizacaoController</servlet-name>
    <servlet-class>controller.SolicitarAutorizacaoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SolicitarAutorizacaoController</servlet-name>
    <url-pattern>/SolicitarAutorizacaoController</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>HistoricoAutorizacaoController</servlet-name>
    <servlet-class>controller.HistoricoAutorizacaoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HistoricoAutorizacaoController</servlet-name>
    <url-pattern>/HistoricoAutorizacaoController</url-pattern>
  </servlet-mapping>

  <!-- Servlet: ListarSolicitacoesController -->
  <servlet>
    <servlet-name>ListarSolicitacoesController</servlet-name>
    <servlet-class>controller.ListarSolicitacoesController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListarSolicitacoesController</servlet-name>
    <url-pattern>/ListarSolicitacoesController</url-pattern>
  </servlet-mapping>

	<!-- Servlet: CadastrarNovaRegraController -->
  <servlet>
    <servlet-name>CadastrarNovaRegraController</servlet-name>
    <servlet-class>controller.CadastrarNovaRegraController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastrarNovaRegraController</servlet-name>
    <url-pattern>/CadastrarNovaRegraController</url-pattern>
  </servlet-mapping>
  <!-- Servlet: CadastroRegraController -->
  <servlet>
    <servlet-name>CadastroRegraController</servlet-name>
    <servlet-class>controller.CadastroRegraController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastroRegraController</servlet-name>
    <url-pattern>/CadastrarNovaRegraController</url-pattern>
  </servlet-mapping>

</web-app>
